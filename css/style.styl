// Variables
$screen-grey = #D4E2E3
$screen-black = #040404
$button-grey = #8B8B8D
$button-black = #4E4E4E
$button-red = #BB5F76
$button-green = #5F9597
$border = 1px solid red

body
  height: 100vh
  display: flex
  align-items: center
  justify-content: space-around
  box-sizing: border-box
  background: url(http://www.topdesignmag.com/wp-content/uploads/2010/12/1116.jpg)

.calculator
  max-width: 800px
  height: 600px
  padding: 10px 0 20px 0
  background: #222222
  border-radius: 20px

.screen
  width: 100%
  height: 40%
  display: flex
  justify-content: center
  align-items: center

.display
  background-color: $screen-grey
  color: $screen-black
  border: 1px solid #787878
  border-radius: 6px
  text-align: right
  font-size: 30px
  height: 75%
  width: 85%
  padding: 10px

.buttons
  // border: $border
  height: 60%
  width: 90%
  display: flex
  flex-wrap: wrap
  padding-left: 10%

button
  height: 15%
  width: 20%
  // border: $border
  border-radius: 6px
  background: $button-grey
  margin: 2.5% 2% 0 0
  outline: none
  color: white
  
.red
  background: $button-red
  
.green
  background: $button-green
  
.black
  background: $button-black
